<%- include('./shared/header.ejs'); %>

    <div id="chat-container">
      <div id="search-container">
        <input type="text" placeholder="Search" />
      </div>
      <div id="conversation-list">
        <div class="conversation active">
          <img src="https://i0.wp.com/thumbs.dreamstime.com/z/cute-boy-face-cartoon-cute-boy-face-cartoon-vector-illustration-graphic-design-110656271.jpg" alt="user1 image"/>
          <div class="title-text">Reazul</div>
          <di class="created-date">Jun 16</di>
          <div class="conversation-message">This is a message</div>
        </div>
        <div class="conversation">
          <img src="https://img.lovepik.com/element/40123/1841.png_860.png" alt="user2 image" />
          <div class="title-text">Islam</div>
          <di class="created-date">Apr 16</di>
          <div class="conversation-message">This is a message</div>
        </div>
      </div>
      <div id="new-message-container">
        <a href="#">+</a>
      </div>
      <div id="chat-title">
        <span>Reazul Islam</span>
        <img src="https://www.materialui.co/materialIcons/action/delete_white_192x192.png" alt="Delete Conversation" />
      </div>
      <div id="chat-message-list">
        <div class="message-row other-message">
          <div class="message-content">
            <img src="https://i0.wp.com/thumbs.dreamstime.com/z/cute-boy-face-cartoon-cute-boy-face-cartoon-vector-illustration-graphic-design-110656271.jpg" alt="user1 image"/>
            <div class="message-text">Ok then</div>
            <div class="message-time">Apr 16</div>
          </div>
        </div>
        <div class="message-row you-message">
          <div class="message-content">
            <div class="message-text">Lorem ipsum dolor sit amet</div>
            <div class="message-time">Apr 16</div>
          </div>
        </div>
      </div>
      <div id="chat-form">
        <img src="https://www.freeiconspng.com/uploads/email-attachment-icon-15.png" alt=Add Attachment"" />
        <input type="text" placeholder="Type a message" />
      </div>
    </div>

    <div class="modal-wrapper">
      <div class="modal">
        <a href="#" class="modal-close">+</a>
        <div class="modal-title">
          <h2>Create New Conversation</h2>
        </div>
        <div class="modal-body">
          <form>
            <input type="text" placeholder="Name" />
            <input type="text" placeholder="Username" />
            <input type="button" value="Submit" />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
